# AromaSouQ Platform - Environment Variables
# Copy this file to .env.local and fill in your values

# ======================
# DATABASE CONFIGURATION
# ======================

# PostgreSQL (Primary transactional database)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aromasouq

# MongoDB (Product catalog & flexible data)
MONGODB_URI=mongodb://mongo:mongo@localhost:27017/aromasouq?authSource=admin

# Redis (Cache & sessions)
REDIS_URL=redis://:redis@localhost:6379

# Elasticsearch (Search engine)
ELASTICSEARCH_URL=http://localhost:9200

# Qdrant (Vector database for AI)
QDRANT_URL=http://localhost:6333

# ======================
# AUTHENTICATION & SECURITY
# ======================

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Salt Rounds (bcrypt)
BCRYPT_SALT_ROUNDS=10

# Session Secret
SESSION_SECRET=change-this-to-a-secure-random-string

# ======================
# PAYMENT GATEWAYS
# ======================

# Stripe (International)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Telr (GCC/UAE focused)
TELR_STORE_ID=your_telr_store_id
TELR_AUTH_KEY=your_telr_auth_key
TELR_API_URL=https://secure.telr.com/gateway/order.json

# PayTabs (Alternative for GCC)
PAYTABS_PROFILE_ID=your_paytabs_profile_id
PAYTABS_SERVER_KEY=your_paytabs_server_key
PAYTABS_API_URL=https://secure.paytabs.com

# ======================
# DELIVERY PARTNERS
# ======================

# Fetchr (UAE same-day delivery)
FETCHR_API_KEY=your_fetchr_api_key
FETCHR_API_URL=https://api.fetchr.us/v1

# Aramex (GCC-wide coverage)
ARAMEX_USERNAME=your_aramex_username
ARAMEX_PASSWORD=your_aramex_password
ARAMEX_ACCOUNT=your_aramex_account
ARAMEX_PIN=your_aramex_pin
ARAMEX_API_URL=https://ws.aramex.net/ShippingAPI.V2

# SMSA Express (Saudi Arabia)
SMSA_API_KEY=your_smsa_api_key
SMSA_API_URL=https://track.smsaexpress.com/

# DHL (International)
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_ACCOUNT=your_dhl_account
DHL_API_URL=https://api.dhl.com

# ======================
# COMMUNICATION SERVICES
# ======================

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# SendGrid (Email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@aromasouq.com
SENDGRID_FROM_NAME=AromaSouQ

# ======================
# REAL-TIME SERVICES
# ======================

# Agora (Video Calls)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# Socket.io (Real-time chat)
SOCKET_IO_PORT=3200

# ======================
# AI/ML SERVICES
# ======================

# OpenAI (ChatGPT for AI bot)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000

# Image Recognition (for Scent Match)
# Use OpenAI CLIP or custom model endpoint
AI_IMAGE_MODEL_URL=http://localhost:8080/predict

# ======================
# CLOUD STORAGE (AWS S3)
# ======================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aromasouq-media
AWS_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# Or use MinIO for local development
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=aromasouq-media

# ======================
# URLS & ENDPOINTS
# ======================

# Frontend URLs
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:8000

# API Gateway
API_GATEWAY_PORT=8000

# Microservices Ports
USER_SERVICE_PORT=3100
PRODUCT_SERVICE_PORT=3101
ORDER_SERVICE_PORT=3102
PAYMENT_SERVICE_PORT=3103
VENDOR_SERVICE_PORT=3104
DELIVERY_SERVICE_PORT=3105
CHAT_SERVICE_PORT=3106
NOTIFICATION_SERVICE_PORT=3107
AI_SERVICE_PORT=8080

# ======================
# ANALYTICS & MONITORING
# ======================

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel (Product analytics)
MIXPANEL_TOKEN=your_mixpanel_token

# ======================
# SOCIAL AUTH
# ======================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple OAuth
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# ======================
# FEATURE FLAGS
# ======================

# Enable/disable features
FEATURE_AI_SCENT_MATCH=true
FEATURE_VIDEO_CALLS=true
FEATURE_SAME_DAY_DELIVERY=true
FEATURE_INFLUENCER_PROGRAM=true
FEATURE_WALLET_CASHBACK=true
FEATURE_CUSTOM_PERFUME=false
FEATURE_WHITE_LABEL=false

# ======================
# DEVELOPMENT SETTINGS
# ======================

# Environment
NODE_ENV=development

# Debug mode
DEBUG=aromasouq:*

# Log level
LOG_LEVEL=debug

# API Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ======================
# PRODUCTION SETTINGS
# (Override in .env.production)
# ======================

# SSL/TLS
# FORCE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# CORS Allowed Origins
# CORS_ORIGINS=https://aromasouq.com,https://admin.aromasouq.com

# ======================
# KAFKA (Event Streaming)
# ======================

KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=aromasouq
KAFKA_GROUP_ID=aromasouq-group

# ======================
# CRON JOBS & BACKGROUND TASKS
# ======================

# Run database backups
BACKUP_CRON=0 2 * * *

# Clear expired sessions
CLEAR_SESSIONS_CRON=0 * * * *

# Update product analytics
UPDATE_ANALYTICS_CRON=0 0 * * *

# Process payouts
PROCESS_PAYOUTS_CRON=0 10 * * 1

# ======================
# MISC
# ======================

# App Name
APP_NAME=AromaSouQ

# Support Email
SUPPORT_EMAIL=support@aromasouq.com

# Default Currency
DEFAULT_CURRENCY=AED

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages
SUPPORTED_LANGUAGES=en,ar

# Timezone
TZ=Asia/Dubai
